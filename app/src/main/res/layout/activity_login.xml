<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:weightSum="5"
    tools:context=".LoginActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4.75"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:text="We Track"
            android:textColor="@android:color/white"
            android:textSize="36sp" />

        <ImageView
            android:id="@+id/google_icon"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_above="@id/title_text"
            android:layout_centerHorizontal="true"
            android:contentDescription="icon"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Signed out"
            android:textColor="@android:color/white"
            android:textSize="14sp"
            android:visibility="gone" />

        <View
            android:id="@+id/empty"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_weight="0.25" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/empty"
            android:layout_centerHorizontal="true"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:background="@drawable/transparent"
            android:elevation="0dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvForRelative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/sign_in_button"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="For registered family members"
            android:textColor="@android:color/darker_gray" />


        <Button
            android:id="@+id/btnAnonymous"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@id/tvForRelative"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="30dp"
            android:layout_marginStart="30dp"
            android:drawableStart="@drawable/ic_anonymous"
            android:elevation="10dp"
            android:paddingStart="20dp"
            android:text="Anonymous User"
            android:textAllCaps="false"
            android:translationZ="5dp"
            android:visibility="visible" />

        <TextView
            android:id="@+id/tvForPublic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/btnAnonymous"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp"
            android:text="For public volunteers"
            android:textColor="@android:color/darker_gray" />

    </RelativeLayout>

</LinearLayout>