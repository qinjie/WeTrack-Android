                android:id="@+id/creditImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="50dp"
                android:src="@drawable/human_credit"
                android:visibility="visible"/>

            <TextView
                android:id="@+id/about1"
                android:layout_below="@id/creditImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="20sp"
                android:text="Project manager"
                android:textColor="@color/md_grey_100"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/about2"
                android:layout_below="@id/about1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textSize="18sp"
                android:text="Mr.Zhang Qinjie"
                android:textColor="#D7FFF1" />

            <TextView
                android:id="@+id/about3"
